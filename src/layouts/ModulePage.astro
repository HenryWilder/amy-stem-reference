---
import PageBase from './PageBase.astro';
import RefPath from '../components/RefPath.astro';
import type { GlossaryEntry } from '../scripts/glossary';

interface Props {
    title: string;
    item: GlossaryEntry;
}

const { title, item } = Astro.props;
---

<PageBase title={title}>
    <RefPath item={item}/>
    <slot></slot>
</PageBase>
