---
import TypePage from '../../layouts/TypePage.astro';
import Ref from '../../components/Ref.astro';
import Katex from '../../components/Katex.astro';
import Method from '../../components/Method.astro';
import Field from '../../components/Field.astro';
---

<TypePage path={["basic", "scalar"]}>
    <Fragment slot="notation">
        <Katex tex="x"/>
    </Fragment>

    <Fragment slot="description">
        A <Ref path={['basic', 'scalar']}/> is a singular count or value.
    </Fragment>

    <Fragment slot="fields">
        <Field path={['basic', 'scalar']} ty={['basic', 'scalar']} symbol="x"/>
    </Fragment>

    <Fragment slot="methods">
        <Method path={["basic", "scalar", "exponent"]}>
        </Method>
    </Fragment>
</TypePage>
