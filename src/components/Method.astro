---
import type { RefKey } from '../scripts/glossary';
import Ref from './Ref.astro';
import ScopeBlock from './ScopeBlock.astro';
import ScopeInline from './ScopeInline.astro';
import Keyword from './syntax/Keyword.astro';
import Todo from './Todo.astro';

interface Props {
    key: RefKey;
}

const { key } = Astro.props;
---

<h3>
    <Keyword tkn="fn"/> <Ref key={key}/><ScopeInline delimiters={['(',')']}>Hello world</ScopeInline> <Keyword tkn="->"/>
</h3>
<ScopeBlock>
    <slot><Todo/></slot>
</ScopeBlock>
