---
import type { GlossaryEntry } from "../scripts/glossary";
import Method from "./Method.astro";
import Type from "./Type.astro";
import Field from "./Field.astro";
import ModuleOverview from "./ModuleOverview.astro";
import Todo from "./Todo.astro";

interface Props {
    item: GlossaryEntry;
}

const { item } = Astro.props;
const kind = item.data.kind;
---

{() => {
    switch (kind) {
        case "function":  return <Method item={item}/>;
        case "type": return <Type item={item}/>;
        case "field": return <Field item={item} symbol="todo"/>;
        case "parameter": return <Field item={item} symbol="todo"/>;
        case "trait": return <Todo/>;
        case "module": return <ModuleOverview module={item.slug}/>;
    }
}}
